<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="8dp">

    <ImageView
        android:id="@+id/imageViewLogo"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:scaleType="fitXY"
        android:contentDescription="Logo of WebLink"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/textViewUrl"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        tools:text="www.channelnewsasia.com The quick brown fox jumps over the lazy dog."
        android:textStyle="bold"
        android:textSize="16sp"
        android:textAlignment="viewStart"
        android:textDirection="locale"
        android:layout_marginStart="8dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@id/imageViewLogo"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/textViewTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        tools:text="CNA - Breaking news, latest developments in Singapore, Asia and around the world"
        android:textAlignment="viewStart"
        android:textDirection="locale"
        android:layout_marginStart="8dp"
        app:layout_constraintTop_toBottomOf="@id/textViewUrl"
        app:layout_constraintStart_toEndOf="@id/imageViewLogo"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>